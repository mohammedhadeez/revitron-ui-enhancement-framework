# =============================================================================
# Exclude Patterns
# =============================================================================

# Exclude compiled Python files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so

# Exclude development and temporary files
global-exclude .DS_Store
global-exclude .coverage
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .tox
global-exclude htmlcov
global-exclude *.egg-info

# Exclude IDE files
global-exclude .vscode
global-exclude .idea
global-exclude *.sublime-*

# Exclude backup and temporary files
global-exclude *~
global-exclude *.bak
global-exclude *.tmp
global-exclude *.temp

# Exclude log files
global-exclude *.log

# Exclude build artifacts
global-exclude build
global-exclude dist

# Exclude version control
global-exclude .git
global-exclude .gitignore
global-exclude .gitattributes

# Exclude OS-specific files
global-exclude Thumbs.db
global-exclude Desktop.ini

# Exclude user-specific configurations
exclude config/local_config.yaml
exclude config/user_config.yaml
exclude .env
exclude .env.*

# Exclude test outputs and temporary files
global-exclude test_*.log
global-exclude coverage_*.xml
global-exclude *.coverage

# Exclude large datasets and generated content
global-exclude generated_*
global-exclude output_*
global-exclude cache_*

